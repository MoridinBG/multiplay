#import <Cocoa/Cocoa.h>
#import <math.h>

#import "EffectProvider.h"
#import "EffectProviderProtocol.h"

#import "LiteTouchInfo.h"
#import "SparklesPhysics.h"

@interface Sparkles : EffectProvider <EffectProviderProtocol>
{
	NSMutableDictionary *colors;	
	NSMutableArray *positionGroup;
	
	NSMutableDictionary *positions;
	NSValue *position;
	
	NSArray *keys;
	NSNumber *key;
	
	float radius;
	float subStep;
	
	float alpha;
	float alphaStep;
}

- (id) init;
- (void) processTouches:(TouchEvent*)event;
- (void) render;

@end
